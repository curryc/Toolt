<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_rec_5dp_white"
            android:orientation="vertical">

        <Button
                android:id="@+id/btn_camera"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_43"
                android:background="@drawable/round_rec_5dp"
                android:text="@string/select_picture_photograph"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/sp_17"/>

        <View
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/gray">
        </View>

        <Button
                android:id="@+id/btn_album"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/bottom_corners_5dp"
                android:text="@string/select_picture_select_from_album"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/sp_17"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@drawable/round_rec_5dp_white"
            android:orientation="vertical">

        <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_43"
                android:background="@drawable/round_rec_5dp_white"
                android:text="@string/select_picture_cancel"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/sp_17"/>
    </LinearLayout>
</LinearLayout>
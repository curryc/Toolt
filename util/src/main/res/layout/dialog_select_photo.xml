<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:orientation="vertical">

        <Button
                android:id="@+id/btn_camera"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_43"
                android:background="@drawable/round_rec_5dp"
                android:text="@string/select_picture_photograph"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/sp_17"/>

        <Button
                android:id="@+id/btn_album"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_rec_5dp"
                android:text="@string/select_picture_select_from_album"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/sp_17"/>

        <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/round_rec_5dp_stroke_white"
                android:text="@string/select_picture_cancel"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_17"/>
</LinearLayout>
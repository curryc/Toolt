<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_dialog_height"
        android:layout_gravity="bottom"
        android:background="@drawable/top_radius_white_dialog">
    <TextView android:layout_width="wrap_content"
              android:layout_height="@dimen/bottom_dialog_hint"
              android:text="hello world"
              android:textAlignment="center"
              android:textAppearance="@style/BigTextAppearance"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
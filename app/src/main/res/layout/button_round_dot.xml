<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_round_dot"
        android:layout_gravity="center"
        android:background="@drawable/rounder_rec">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/button_round_dot_title"
            android:textAppearance="@style/NormalTextAppearance"
            android:textSize="@dimen/round_dot_button_text_size"
            android:paddingLeft="@dimen/round_dot_button_radius"
            android:paddingRight="@dimen/round_dot_button_radius"
            android:paddingTop="@dimen/round_dot_button_text_padding"
            android:paddingBottom="@dimen/round_dot_button_text_padding"
            android:gravity="center"
            android:text="功能标题"></TextView>
    <com.curry.util.view.RoundImageView
            android:layout_width="@dimen/round_dot_button_dot_size"
            android:layout_height="@dimen/round_dot_button_dot_size"
            android:id="@+id/button_round_dot_dot"
            android:layout_gravity="right|top"
            android:src="@color/red"></com.curry.util.view.RoundImageView>
</FrameLayout>